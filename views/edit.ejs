<% include ./partials/header.ejs %>

<form class="ui form" method="post" action="/<%= found.topic%>/<%= found._id %>/?_method=PUT">
    <div class="container">
        <div class="label new">Title</div>
        <div class="field">
            <input class="new" type="text" name="title" value="<%= found.title %>"/>
        </div>
        <div class="label new">Image</div>
        <div class="field">
            <input class="new" type="text" name="img" value="<%= found.image %>"/>
        </div>
        <div class="label new">Your Post</div>
        <textarea class="post new lst" name="content" value="<%= found.content %>"></textarea>
        <input type="submit" class="ui primary button">
    </div>
</form>

