<% include ./partials/header.ejs %>


<h1 class="head">Blogs on <%= topic %></h1>

<div class="contain">
    <div class="ui celled grid">
        <% for(i=0;i<posts.length;i++) { %>
            <div class="row" style="height: 100px">
                <div class="three wide column">
                    <img class="imag2" src="<%= posts[i].image %>"/>
                </div>
                <div class="thirteen wide column hex">
                    <span style="font-size: 34px">
                        <%= posts[i].title %>
                    </span>
                    <a class="link" href="/<%= topic %>/<%= posts[i]._id %>">Read More</a>
                </div>
            </div>
        <% } %>
    </div>
</div>
<a id="faa" class="positive ui button booo" href="/<%= topic %>/new">Create new Post</a>

<% include ./partials/footer.ejs %>